page{height:100%;}
.input-top{padding:10px 15px;margin-bottom:10px;}
.input-company{text-align:center;min-height:32px;}
.input-company .company-logo, .input-company .company-name{display:inline-block;vertical-align:middle;}
.input-company .company-logo{display:none;width:50px;height:50px;border-radius:50%;box-shadow:0 0 10px #C6DAFF;}
.input-company .company-name{margin-left:10px;font-size:20px;font-weight:bold;color:#3986FE;}
.company-name .arrow-icon{width:20px;height:20px;margin-left:5px;vertical-align:middle;}
.input-form{margin:10px 0;padding:10px 15px;}
.input-form input{height:46px;line-height:44px;padding:0 40px 0 10px;font-size:18px;background:#FFF;}
.input-form .field-con button{width:60px;height:40px;line-height:38px;text-align:center;font-size:12px;
background:#D2D2D2;border:1px solid #C2C2C2;border-left:0 none;}
.input-form .field-con button:active{background:#A2A2A2;}
.input-form .field-con input:active{border-color:#3986FE;}
.field-con{position:relative;}
.input-clear{position:absolute;z-index:10;right:0;top:0;width:46px;height:46px;line-height:42px;text-align:center;}
.input-clear .clear-icon{display:inline-block;width:20px;height:20px;vertical-align:middle;}
.inrow-hd{width:52px;height:46px;line-height:44px;text-align:center;background:#E2E2E2;border:1px solid #C2C2C2;border-right:0 none;}
.inrow-icon{display:inline-block;width:24px;height:24px;margin-top:10px;}
.inrow-pos{text-align:center;background:#E2E2E2;padding:15px;}
.inrow-pos .pos-txt{font-size:20px;}
.inrow-pos .pos-txt .val{color:#FF570A;}
.inrow-pos .pos-tips{font-size:14px;}
.form-submit{margin-top:30px;}
.input-count{margin-top:10px;}
.input-count .count-item{display:inline-block;padding:2px 10px;line-height:1.4;text-align:center;vertical-align:middle;}
.count-item .item-val{min-height:32px;font-size:24px;font-weight:bold;color:#3986FE;}
.count-item.item-not .item-val{color:#FF570A;}
.count-item .item-tit{font-size:14px;color:#333;}
.count-line{display:inline-block;width:1px;height:32px;margin:0 20px;background:#D2D2D2;vertical-align:middle;}
.pos-value{font-size:22px;font-weight:bold;color:#3986FE;}
.canvas-box{position:fixed;z-index:10;top:200%;left:0;width:100%;height:100%;opacity:0;background:#FFF;}
.camera{position:fixed;z-index:500;left:0;top:150%;width:100%;height:100%;transition:all 300ms ease-in-out;background:#FFF;box-shadow:0 -1px 10px rgba(0,0,0,0.1);}
.camera.up{top:0;}
.coverbg{color:#FFF;background:rgba(0,0,0,0.5);}
.cover{position:absolute;z-index:10;top:0;left:0;width:100%;height:100%;color:#FFF;}
.cover-top{position:absolute;z-index:10;top:0;left:0;width:100%;height:280px;}
.cover-title{height:80px;line-height:80px;font-size:20px;text-align:center;}
.cover-frame{height:120px;}
.cover-frame .flex-item{height:100%;}
.cover-more{height:80px;}
.frame-screen{position:relative;width:300px;height:100%;}
.screen-sign{display:block;position:absolute;z-index:200;}
.sign-top{left:0px;top:0px;width:100%;height:1px;background:#3986FE;}
.sign-bottom{left:0px;bottom:0px;width:100%;height:1px;background:#3986FE;}
.sign-left{left:0px;top:0px;width:1px;height:100%;background:#3986FE;}
.sign-right{right:0px;bottom:0px;width:1px;height:100%;background:#3986FE;}
.sign-line{width:100%;height:1px;left:0px;top:50%;background:rgba(255,0,0,0.3);}
.cover-body{position:relative;padding-top:280px;height:100%;}
.cover-con{position:relative;height:100%;padding:10px 15px;}
.con-top{height:20px;}
.cover-input{height:46px;line-height:46px;background:#000;}
.cover-close{position:absolute;z-index:20;bottom:50px;left:0;width:100%;text-align:center;}
.close-icon{display:inline-block;margin:0 auto;width:40px;height:40px;}
.input-scan{padding:5px 15px;text-align:center;}
.scan-btn{display:inline-block;padding:8px 30px;font-size:20px;color:#FFF;line-height:1;text-align:center;background:#3986FE;border-radius:40px;box-shadow:0 0 5px rgba(0,0,0,0.2);}
.scan-btn .scan-icon{width:26px;height:26px;vertical-align:middle;}
.scan-txt{display:inline-block;margin-left:8px;vertical-align:middle;}
.scan-btn:active{background:#2776EA;}